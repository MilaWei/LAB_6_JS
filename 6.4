<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
  
  <div id="result1"></div>
  <div id="result2"></div>
  <div id="result3"></div>
  <div id="result4"></div>

  <script>
    function convertCtoF(celsius) {
      let fahrenheit = (celsius * 9/5) + 32;
      return fahrenheit;
    }

    const result1 = convertCtoF(0);
    document.getElementById("result1").innerHTML = "Результат 1: " + result1;

    const result2 = convertCtoF(-30);
    document.getElementById("result2").innerHTML = "Результат 2: " + result2;

    const result3 = convertCtoF(-10);
    document.getElementById("result3").innerHTML = "Результат 3: " + result3;

    const result4 = convertCtoF(30);
    document.getElementById("result4").innerHTML = "Результат 4: " + result4;
  </script>
</body>
</html>
